# Dockerfile for Purple Agent (Test Subject)

FROM python:3.11-slim

# Install system dependencies
RUN apt-get update && apt-get install -y \
    gcc \
    g++ \
    git \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Set working directory
WORKDIR /app

# Copy requirements and install Python dependencies
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt
# Install basic python packages
RUN pip install --no-cache-dir pandas matplotlib numpy scipy scikit-learn seaborn

# Copy only necessary files for Purple Agent
COPY src/purple_agent/ ./src/purple_agent/
COPY src/shared_utils.py ./src/shared_utils.py
COPY src/__init__.py ./src/__init__.py

# Create directories for logs and results
RUN mkdir -p logs results

# Set environment variables
ENV PYTHONPATH=/app:/app/src
ENV PURPLE_PORT=9019

# Expose purple agent port
EXPOSE 9019

# Health check for purple agent
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
    CMD curl -f http://localhost:9019/.well-known/agent-card.json || exit 1

# Default command-line arguments
CMD ["--host", "0.0.0.0"]

# Define ENTRYPOINT that accepts AgentBeats arguments
ENTRYPOINT ["python", "src/purple_agent/agent.py"]